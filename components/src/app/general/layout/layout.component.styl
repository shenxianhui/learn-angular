:host
    height 100%
    width 100%
    position relative
    display block

.dash-bg
  height 100%
  width 100%
  position relative

.svg
    height 100%
    width 100%
    position relative
    display block

// 大屏标题字体样式
.bg-top-title
  position relative
  text-align center
  line-height 1.4
  font-size 36px
  margin-top 0px
  height 76px
  padding-top 0px
  background var(--titleBac) no-repeat top center
  background-size 100%
  z-index 1

.bg-bottom
    height calc(100% - 60px)
    position relative
    top -27px

    .core-layout
        width 100%
        height 100%
        overflow hidden
