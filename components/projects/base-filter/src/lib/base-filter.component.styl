:host
  display flex
  height 100%
  flex-wrap wrap
.base-filter
  width: 100%;
  height: 100%;
  section
    display inline-block
    height 28px
    width 104px
    margin-right 13px
    border-left 2px solid #36f
    border-right 2px solid #36f
    position relative
    span
      display inline-block
      width 5px
      height 2px
      background-color #36f
      position absolute
      top 27px
    .top-dash-l
      top -1px
      left -2px
    .top-dash-r
      top -1px
      right -2px
    .bottom-dash-l
      left -2px
    .bottom-dash-r
      right -2px
  .active
    .switch-btn
      background-color rgba(51, 102, 255, 0.8)
      color rgba(255, 255, 255, 0.85)
  .switch-btn
    width 100%
    height 100%
    background rgba(51, 102, 255, 0.3)
    color rgba(255, 255, 255, 0.65)
    font-family PingFangSC-Regular
    font-size 16px
    line-height 28px
    text-align center
    position relative
    cursor pointer
    &:before
      width 94px
      height 3px
      content ''
      margin 0 auto
      position absolute
      left 3px
      top -3px
      z-index 1
      background #09152d
.pattern
  section
    border: none
    height: 37px
    .pattern-bgc
      display: flex
      align-items: center
      justify-content: center
      background: transparent url('assets/base-filter/image/no.png') no-repeat center center
      background-size: cover
    .pattern-active
      background: transparent url('assets/base-filter/image/active.png') no-repeat center center