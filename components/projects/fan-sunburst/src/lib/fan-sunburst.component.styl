.fan-sunburst{
  display: inline-block;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  
  .top-title{
    position: absolute;
    top: 25px;
    color: #fff;
    font-size: 18px;
    width: 100%;
    text-align: center;
  }

  .bottom-box{
    position: absolute;
    bottom: 25px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-content: center;
  }

  .botext{
    color: #fff;
    font-size: 16px;
    margin: 0 15px;
    line-height: 22px;
  }

  .boimg{
    height: 22px;
    width: 16px;
    cursor: pointer;
  }
}

.wh-100{
  width:100%;
  height:100%;
}