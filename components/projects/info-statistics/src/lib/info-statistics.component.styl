.text-ellipsis {
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.wrap {
  width: 100%;
  height: 100%;
  .card-wrap {
    display: flex;
    .crad {
      width: 50%;
      height: 70px;
      background: rgba(255, 255, 255, 0.08);
      &:not(:last-child) {
        margin-right: 10px;
      }
      .card-cot {
        margin-left: 20px;
        .cot-top {
          margin-top: 10px;
          height: 24px;
          font-size: 24px;
          font-family: PingFang SC, PingFang SC-Medium;
          font-weight: Medium;
          text-align: left;
          color: #52d2ff;
          line-height: 24px;
          letter-spacing: 0.01px;
        }
        .cot-bot {
          margin-top: 12px;
          height: 14px;
          font-size: 14px;
          font-family: PingFang SC, PingFang SC-Medium;
          font-weight: Medium;
          text-align: left;
          color: #ffffff;
          line-height: 14px;
          letter-spacing: 0.01px;
        }
      }
    }
  }
}
.new-line {
  width: 100%;
  height: 5.6px;
}
.line {
  position: relative;
  margin-top: 12px;
  width: 100%;
  height: 1px;
  background: rgba(255, 255, 255, 0.4);
  &::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 30px;
    height: 5px;
    background: #52d2ff;
  }
  &::after {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    width: 30px;
    height: 5px;
    background: #52d2ff;
  }
}
.card-bot-wrap {
  margin-top: 5px;
  display: flex;
  .card-left {
    padding-right: 8px;
    margin-right: 8px;
    width: 65%;
    height: 40px;
    background: rgba(255, 255, 255, 0.08);
    display: flex;
    align-items: center;
    /* justify-content: center; */

    .card-left-cot {
      width: 100%;
      margin-left: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      .card-left-pic {
        width: 24px;
        height: 24px;
      }
      .card-left--text {
        margin-left: 12px;
        width: 100%;
        height: 14px;
        font-size: 14px;
        font-family: PingFang SC, PingFang SC-Medium;
        font-weight: Medium;
        text-align: left;
        color: #ffffff;
        line-height: 14px;
        letter-spacing: 0.01px;
      }
    }
  }
  .card-right {
    width: 35%;
    height: 40px;
    background: rgba(255, 255, 255, 0.08);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 10px;
    .card-right-cot {
      .card-right-text {
        width: 81px;
        height: 24px;
        font-size: 24px;
        font-family: Roboto, Roboto-Medium;
        font-weight: Medium;
        text-align: right;
        color: #ffffff;
        line-height: 24px;
        letter-spacing: 0.01px;
      }
    }
  }
}
.progressbar-box{
  overflow: hidden;
}
.progressbar {
  margin-top: 23px;
  display: flex;
  align-items: center;
  transtion: all 0.5s ease;
  .text {
    width: 58px;
    height: 14px;
    font-size: 14px;
    font-family: Roboto, Roboto-Medium;
    font-weight: Regular;
    text-align: left;
    color: #ffffff;
    line-height: 14px;
    letter-spacing: 0.01px;
  }
  .middle {
    flex-grow: 1;
    margin-left: 18px;
    margin-right: 24px;
    .long {
      width: 100%;
      height: 6px;
      background: rgba(255, 255, 255, 0.2);
      .short {
        width: 80%;
        height: 6px;
        background: linear-gradient(90deg, rgba(82, 210, 255, 0.4), rgba(109, 217, 255, 0.9) 99%);
      }
    }
  }
  .nub {
    width: 33px;
    height: 20px;
    font-size: 18px;
    font-family: Roboto, Roboto-Medium;
    font-weight: Medium;
    text-align: right;
    color: #fafbff;
    line-height: 20px;
    letter-spacing: 0.01px;
  }
}
