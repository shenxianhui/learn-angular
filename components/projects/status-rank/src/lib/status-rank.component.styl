.rotate180 {
  transform: rotate(180deg);
}
.text-ellipsis {
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.status-rank {
  width: 100%;
  height: 100%;
  overflow: hidden;
  .wrap {
    position: relative;
    display: flex;
    width: 100%;
    transition:all 0.5s ease;
    &:not(:last-child) {
      margin-bottom: 20px;
    }
    .left {
      width: 25%;
      .text-wrap {
        margin-bottom: 9px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 23px;
        background-image: url(assets/status-rank/image/title_bg.png);
        background-size: 100% 100%;
        background-repeat: no-repeat;
        .text {
          text-align: center;
          font-size: 14px;
          font-weight: Medium;
          color: #52d2ff;
          line-height: 14px;
        }
      }
      .nub-wrap {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 11px;
        // width: 50px;
        width: 50%;
        height: 34px;
        border-top: 1px solid rgba(255, 255, 255, 0.4);
        border-bottom: 1px solid rgba(255, 255, 255, 0.4);
        .nub {
          font-size: 20px;
          font-weight: Medium;
          text-align: left;
          color: #fafbff;
          line-height: 20px;
          font-family: Roboto, Roboto-Medium;
        }
        img {
          width: 40px;
          height: 40px;
        }
      }
    }
    .right {
      flex-grow: 1;
      .line {
        position: relative;
        margin-left: 4px;
        margin-bottom: 12px;
        height: 1px;
        background-color: rgba(255, 255, 255, 0.4);

        &::after {
          content: '';
          position: absolute;
          right: 0;
          top: 0;
          width: 1px;
          height: 8px;
          background-color: rgba(255, 255, 255, 0.4);
        }
      }
      .state-wrap {
        display: flex;
        flex-grow: 1;
        .state {
          flex-grow: 1;
          margin-right: 12px;
          &:nth-child(1) {
            .state-nub-wrap {
              .progressbar {
                .external {
                  .internal {
                    background: linear-gradient(
                      90deg,
                      rgba(82, 210, 255, 0.5),
                      rgba(109, 217, 255, 0.9) 99%
                    );
                  }
                }
              }
              .number-wrap {
                background: rgba(82, 210, 255, 0.12);
                .number {
                  color: #52d2ff;
                }
              }
            }
          }
          &:nth-child(2) {
            .state-nub-wrap {
              .progressbar {
                .external {
                  .internal {
                    background: linear-gradient(
                      90deg,
                      rgba(255, 191, 89, 0.5),
                      rgba(255, 191, 89, 0.9) 99%
                    );
                  }
                }
              }
              .number-wrap {
                background: rgba(255, 191, 89, 0.12);
                .number {
                  color: #ffbf59;
                }
              }
            }
          }
          &:nth-child(3) {
            .state-nub-wrap {
              .progressbar {
                .external {
                  .internal {
                    background: linear-gradient(
                      90deg,
                      rgba(255, 67, 91, 0.5),
                      rgba(255, 67, 91, 0.9) 99%
                    );
                  }
                }
              }
              .number-wrap {
                background: rgba(255, 67, 91, 0.12);
                .number {
                  color: #ff435b;
                }
              }
            }
          }
          .state-text {
            margin-bottom: 6px;
            font-size: 14px;
            font-weight: Regular;
            text-align: right;
            color: rgba(255, 255, 255, 0.8);
            line-height: 14px;
          }
          .state-nub-wrap {
            .progressbar {
              .external {
                width: 100%;
                height: 4px;
                background: rgba(255, 255, 255, 0.2);
                .internal {
                  height: 4px;
                }
              }
            }
            .number-wrap {
              height: 35px;
              padding-top: 6px;
              .number {
                /* margin-top: 6px; */
                font-size: 18px;
                font-weight: Medium;
                text-align: right;
                line-height: 18px;
                margin-right: 6px;
                font-family: Roboto, Roboto-Medium;
              }
            }
          }
        }
      }
    }
  }
  /* 需要用定位的 */
  .background-wrap {
    position: absolute;
    top: 32px;
    // left: 57px;
    left: calc(12.5% + 8px);
    right: 0;
    display: flex;
    .pic-wrap {
      display: flex;
      align-items: center;
      .pic-left {
        width: 4px;
        height: 34px;
      }
      .pic-mid {
        width: 4px;
        height: 6px;
        margin: 0 2px;
      }
    }
    .middle-wrap {
      // margin-left: 2px;
      // margin-right: 2px;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 40px;
      /* opacity: 0.08; */
      background: rgba(255, 255, 255, 0.01);
      .middle-line {
        width: 100%;
        height: 1px;
        /* opacity: 0.12; */
        background: rgba(250, 251, 255, 0.12);
      }
    }
  }
}
